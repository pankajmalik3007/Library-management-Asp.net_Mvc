@model IEnumerable<OnetoManyModelPopup_Book_user_Borrowbook.Models.Book>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model=>model.BookId)</th>
                 <th>@Html.DisplayNameFor(model=>model.Title)</th>
            <th>@Html.DisplayNameFor(model=>model.ISBN)</th>

            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Book",null,Context.Request.Scheme)','New Book')" class="btn btn-success text-white">New Book</a>
            </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor( e => item.BookId)
                </td>
                <td>
                    @Html.DisplayFor( e => item.Title)
                </td>
                <td>
                    @Html.DisplayFor( e => item.ISBN)
                </td>
               

                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Book",new {id=item.BookId},Context.Request.Scheme)','Update Book')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.BookId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

@model List<BorrowBook>

<h2>Borrowed Books</h2>

<form method="post">
    <div class="form-group">
        <label for="userId">Enter User ID:</label>
        <input type="text" id="userId" name="userId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Borrow Date</th>
                <th>Return Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrowedBook in Model)
            {
                <tr>
                    <td>@borrowedBook.BorrowBookId</td>
                    <td>@borrowedBook.BorrowDate.ToShortDateString()</td>
                    <td>@borrowedBook.ReturnDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null && Model.Count == 0)
{
    <p>No borrowed books found for the specified user.</p>
}

